{
  "name": "express-on-typescript",
  "version": "0.0.7",
  "description": "My first express server written in TypeScript",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "tsc && @powershell copy src/db/tests_backup.json dist/db && @powershell copy src/pages/* dist/pages",
    "test": "test",
    "start": "set PORT=8000 && node dist/app.js",
    "dev": "set PORT=8000 && nodemon src/app.ts",
    "build": "tsc -p .",
    "tests": "mocha ./src/tests/sanity.ts --reporter mochawesome",
    "init-dist": "@powershell new-item dist/pages -itemtype directory"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OrenVilderman/express-on-typescript.git"
  },
  "author": "Oren Vilderman",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "express": "^4.17.1",
    "mocha": "^8.3.2",
    "mochawesome": "^6.2.2",
    "ts-mocha": "^8.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.3",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "bugs": {
    "url": "https://github.com/OrenVilderman/express-on-typescript/issues"
  },
  "homepage": "https://github.com/OrenVilderman/express-on-typescript#readme"
}
